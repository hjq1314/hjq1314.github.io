<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>参数内容显示页</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; padding: 50px; }
        .content { font-size: 24px; color: #333; margin-top: 30px; padding: 20px; border: 1px solid #eee; border-radius: 8px; }
        .empty { color: #999; }
    </style>
</head>
<body>
    <h1>跳转参数内容展示</h1>
    <div class="content" id="displayContent"></div>

    <script>
        // 1. 获取网址中 "key=" 后面的参数内容
        function getUrlParam() {
            const url = window.location.href;
            const paramKey = "key=";
            const startIndex = url.indexOf(paramKey) + paramKey.length;
            if (startIndex === paramKey.length) return "暂无参数内容"; // 没找到key参数时显示
            
            // 截取key参数后的值（忽略后面可能的其他参数）
            let endIndex = url.indexOf("&", startIndex);
            endIndex = endIndex === -1 ? url.length : endIndex;
            return decodeURIComponent(url.substring(startIndex, endIndex)); // 解码中文/特殊字符
        }

        // 2. 显示内容到页面
        document.getElementById("displayContent").textContent = getUrlParam();
    </script>
</body>
</html>
